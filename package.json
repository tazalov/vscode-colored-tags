{
  "name": "vscode-colored-tags",
  "displayName": "vscode-colored-tags",
  "description": "Highlights HTML/JSX/TSX etc. tags with distinct colors",
  "version": "0.0.1",
  "publisher": "tazalov",
  "license": "MIT",
  "homepage": "https://github.com/tazalov/vscode-colored-tags/blob/dev/README.md",
  "bugs": {
    "url": "https://github.com/tazalov/vscode-colored-tags/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tazalov/vscode-colored-tags.git"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "icon": "src/assets/icon.png",
  "categories": [
    "Other",
    "Themes"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onLanguage:vue",
    "onLanguage:xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-colored-tags.refresh",
        "title": "Refresh Tag Colors"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "node ./out/test/runTest.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "prettier": "3.8.1",
    "sinon": "^21.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
